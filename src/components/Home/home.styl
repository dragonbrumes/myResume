@import '~/styles/vars'

.home
    &-card
        display: inline-block
        width: 100%
        height 100vh
        margin-top: 4vh
        position: relative
        background-color: $pagesBkg
    &-row1  
        width: 100%
        margin: auto
        background-color $homeFirstRowBkg
        height: 170px
        text-align: center
        box-shadow: $navShadow
        &--name
            font-family: 'Nunito', sans-serif
            font-weight 700
            color: white
            font-size: 1.8em
            padding-top: 1.8em
        &--jobProfil    
            color: white
            font-size: 0.9em
            padding-top: 0.8em
    &-row2
        width: 50%
        padding: 3em
        margin: auto
        margin-top: 5em
        background-color #fff
        text-align: center
        // border: 1px solid #80AA98
        box-shadow: $navShadow

        &--textIntro--p a
            text-decoration: underline
        &--textIntro--p a:visited
            text-decoration: underline

    &-picture
        background no-repeat center url("../../assets/home-picture.png");
        background-size: 99.50%;
        box-shadow: $navShadow
        content: ' '
        margin: auto
        border 2px solid white
        border-radius: 70px
        height 125px
        width: 125px
        position: absolute
        top: 110px
        left: 0
        right: 0
        margin-left: auto
        margin-right: auto

    &-buttons
        padding: 1em        
    &-buttons a
        color: white    
    &-buttons a:visited
        color: white    